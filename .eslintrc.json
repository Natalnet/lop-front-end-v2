{
  "extends": "next/core-web-vitals",
  "rules": {
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "no-unused-vars": "warn",
    "import/order": [
      "warn",
      {
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "@tootz/**",
            "group": "external",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"],
        "newlines-between": "always"
      }
    ],
    "@next/next/no-img-element": "off",
    "react-hooks/exhaustive-deps": "off"
  }
}
